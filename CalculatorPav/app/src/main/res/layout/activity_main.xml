<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textSize="40pt"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/resultTextView"/>
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="AC"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_marginStart="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorUpperButtons"
                    android:id="@+id/buAC" android:onClick="acEvent"/>
            <Button
                    android:text="+/-"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorUpperButtons"
                    android:id="@+id/buPlusMinus" android:onClick="numberEvent"/>
            <Button
                    android:text="/"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorUpperButtons"
                    android:id="@+id/buDivide" android:onClick="operatorEvent"/>
            <Button
                    android:text="*"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorRightButtons"
                    android:id="@+id/buMultiply" android:onClick="operatorEvent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="7"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_marginStart="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu7" android:onClick="numberEvent"/>
            <Button
                    android:text="8"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu8" android:onClick="numberEvent"/>
            <Button
                    android:text="9"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu9" android:onClick="numberEvent"/>
            <Button
                    android:text="%"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorRightButtons"
                    android:id="@+id/buPercent" android:onClick="percentEvent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="4"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_marginStart="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu4" android:onClick="numberEvent"/>
            <Button
                    android:text="5"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu5" android:onClick="numberEvent"/>
            <Button
                    android:text="6"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu6" android:onClick="numberEvent"/>
            <Button
                    android:text="+"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorRightButtons"
                    android:id="@+id/buPlus" android:onClick="operatorEvent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="1"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_marginStart="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu1" android:onClick="numberEvent"/>
            <Button
                    android:text="2"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu2" android:onClick="numberEvent"/>
            <Button
                    android:text="3"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu3" android:onClick="numberEvent"/>
            <Button
                    android:text="-"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorRightButtons"
                    android:id="@+id/buMinus" android:onClick="operatorEvent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="1pt">
            <Button
                    android:text="0"
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_marginStart="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/bu0" android:onClick="numberEvent"/>
            <Button
                    android:text=","
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorNumberButtons"
                    android:id="@+id/buDot" android:onClick="numberEvent"/>
            <Button
                    android:text="="
                    android:textSize="8pt"
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/colorRightButtons"
                    android:id="@+id/buEqual" android:onClick="equalEvent"/>
        </TableRow>
    </TableLayout>

</LinearLayout>